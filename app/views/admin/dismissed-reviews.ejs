<!DOCTYPE html>
<html lang="en">

<head>
    <% include layouts/header %>
        <!-- Bootstrap Dropify CSS -->
        <link href="/static/admin/libs/dropify/dist/css/dropify.min.css" rel="stylesheet" type="text/css" />
        <!-- Bootstrap Colorpicker CSS -->
        <link href="/static/admin/libs/mjolnic-bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css"
            rel="stylesheet" type="text/css" />
</head>

<body>
    <!--Preloader-->
    <div class="preloader-it">
        <div class="la-anim-1"></div>
    </div>
    <!--/Preloader-->
    <div class="wrapper theme-5-active pimary-color-green">
        <% include layouts/menu %>
            <!-- Main Content -->
            <div class="page-wrapper">
                <div class="container-fluid">
                    <!-- Title -->
                    <div class="row heading-bg">
                        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12" style="width: 100%">
                            <h5 class="txt-dark" style="float: left;">Trang quản lý các nhận xét bị từ chối</h5>
                        </div>
                    </div>
                    <!-- /Title -->
                    <!-- Row -->
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="panel panel-default card-view">
                                <div class="panel-wrapper collapse in">
                                    <div class="panel-body row">
                                        <div class="table-wrap">
                                            <div class="table-responsive">
                                                <table class="table display mb-30" cellspacing="0" width="100%" id="table-review">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Người đăng</th>
                                                            <th>Sản phẩm</th>
                                                            <th>Tiêu đề</th>
                                                            <th>Số sao</th>
                                                            <th>Nội dung</th>
                                                            <th>Ngày thêm</th>
                                                            <th>Trạng thái</th>
                                                            <th>Chức năng</th>
                                                        </tr>
                                                    </thead>
                                                    <tfoot>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Người đăng</th>
                                                            <th>Sản phẩm</th>
                                                            <th>Tiêu đề</th>
                                                            <th>Số sao</th>
                                                            <th>Nội dung</th>  
                                                            <th>Ngày thêm</th>
                                                            <th>Trạng thái</th>
                                                            <th>Chức năng</th>
                                                        </tr>
                                                    </tfoot>
                                                    <tbody>
                                                        <% if (data.reviews && data.reviews.length != 0) { %>
                                                            <% data.reviews.forEach((review) => { %>
                                                                <% var fullName = review.byUser.fullName.firstName + " " + review.byUser.fullName.lastName %>
                                                                <% var date = new Date(review.created_at) %>
                                                                <% var dateCreated = date.getHours() + ":" + date.getMinutes() + " " + date.getDate() + "/"+  date.getMonth() +"/" +date.getFullYear() %>
                                                                <tr role="row" id="<%- review._id %>"> 
                                                                    <td class="txt-dark td-id">
                                                                        <%- review._id %>
                                                                    </td>
                                                                    <td style="color: blue; font-size: 16px;" class="td-name-user">
                                                                        <a href="javascript: void(0)"> <%- fullName %></a>
                                                                    </td>
                                                                    <td class="txt-dark td-product">
                                                                        <a href="/<%- review.product.alias %>-<%- review.product._id %>"><%- review.product.name %></a>
                                                                    </td>
                                                                    <td class="td-title">
                                                                        <%- review.title %>
                                                                    </td>
                                                                    <td class="td-star">
                                                                    <div class="product-rating inline-block mb-10">
                                                                        <% for(let i = 1; i <= review.star; i++) { %>
                                                                            <a href="javascript:void(0);" class="zmdi zmdi-star"></a>
                                                                        <% } %>
                                                                                
                                                                    </div>
                                                                    </td>
                                                                    <td class="td-content">
                                                                        <%- review.content %>
                                                                    </td>
                                                                    <td class="td-date-created">
                                                                        <%- dateCreated %>
                                                                    </td>
                                                                    <td>

                                                                        <% if (review.status == 0) { %>
                                                                        <span class="label label-success font-weight-100">Chờ duyệt</span>
                                                                       <% } else if (review.status == 1) { %>
                                                                       <span class="label label-primary font-weight-100">Đã duyệt</span>
                                                                            <% } else { %>
                                                                            <span class="label label-default font-weight-100">Bị từ chối</span>
                                                                    <% } %>
                                                                        
                                                                    </td>
                                                                    <td class="action-brand">
                                                                        <a href="javascript:void(0)" class="text-inverse pr-10 allow-review" title="" data-id-review="<%- review._id %>">
                                                                            <i class="zmdi zmdi-check txt-warning"></i>
                                                                        </a>
                                                                        <a href="javascript:void(0)" class="text-inverse delete-review" title="" data-id-review="<%- review._id %>">
                                                                            <i class="zmdi zmdi-delete txt-danger"></i>
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                            <% }); %>
                                                        <% } %>
                                                    </tbody>                                                    
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /Row -->
                        <!-- Footer -->
                        <footer class="footer container-fluid pl-30 pr-30">
                            <div class="row">
                                <div class="col-sm-12">
                                    <p>2018 &copy; Alomobile</p>
                                </div>
                            </div>
                        </footer>
                        <!-- /Footer -->    
                    </div>
                    <!-- /Main Content -->
                </div>
                <!-- /#wrapper -->
                <% include layouts/footer %>
                <script type="text/javascript" src="/static/admin/libs/dropify/dist/js/dropify.min.js"></script>
                <script type="text/javascript" src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
                    <script type="text/javascript">
                      
                      function confirmDelete(cb) {
                            swal({
                                    title: "Bạn có muốn xoá không?",
                                    text: "Nhấn vào 'Đồng ý' để xoá, không thể phục hồi được sau khi xoá!",
                                    icon: "info",
                                    buttons: {
                                        cancel: true,
                                        yes: "Đồng ý"
                                    },
                                })
                                .then((value) => {
                                    switch (value) {     
                                        case "yes":
                                            return cb(true);
                                            break;                               
                                        default:
                                            return cb(false);
                                            break;
                                    }
                                }); 
                        }

                    </script>
                    <script>
                        jQuery(document).ready(($) => {
                            //configation datatable jquery
                            var table = $('#table-review').DataTable();

                            //add and update brand
                            $("form").submit((e) => {

                                e.preventDefault();

                                //remove alert
                                $('.alert').remove();

                                //get purpose
                                var purpose = $('.btn-save-changes').attr('id');

                                var brand_name,
                                    brand_alias,
                                    brand_icon,
                                    brand_url;

                                //receive parameters
                                $("#form-add-brand :input").each((index, element) => {

                                    var id = $(element).attr('id');

                                    switch (id) {
                                        case 'brand-name':
                                            brand_name = $(element).val();

                                            if (!brand_name) {
                                                showAlert("#alert-error", "Tên thương hiệu là bắt buộc!");
                                                return
                                            }

                                            break;
                                        case 'brand-alias':
                                            brand_alias = $(element).val();

                                            if (!brand_alias) {
                                                showAlert("#alert-error", "SEO URL là bắt buộc!");
                                                return
                                            }
                                            break;
                                        case 'brand-icon':
                                            if ($(element).get(0).files.length != 0) {
                                                brand_icon = $(element).get(0).files[0];
                                            };
                                            break;
                                        case 'brand-url':
                                            brand_url = $(element).val();
                                            break;
                                    }
                                });

                                var formData = new FormData();

                                if (purpose == "btn-add-brand") {                                    
                                    formData.append("name", brand_name);
                                    formData.append("image", brand_icon);
                                    formData.append("url", brand_url);
                                    formData.append("alias", brand_alias);

                                    $.ajax({
                                        url: '/admin/brand',
                                        method: 'POST',
                                        data: formData,
                                        processData: false,
                                        contentType: false,
                                        success: (data) => {
                                            if (data.error) {
                                                swal('Oops', data.error, 'error')
                                            } else {
                                                location.reload(true);
                                            }
                                        },
                                        error: (err) => {
                                            swal('Oops', err.status == 403 ? 'Bạn không có quyền sử dụng chức năng này' : 'Lỗi không xác định hoặc bạn không có quyền thực hiện chức năng này.', 'error')
                                        }
                                    });
                                } else {

                                    formData.append("name", brand_name);
                                    formData.append("alias", brand_alias);
                                    formData.append("id", $('#brand-id').attr('data-id-brand'));
                                    formData.append("image", brand_icon);
                                    formData.append("url", brand_url);

                                    $.ajax({
                                        url: '/admin/brand',
                                        method: 'PUT',
                                        data: formData,
                                        processData: false,
                                        contentType: false,
                                        success: (result) => {
                                            if (result.error) {
                                                swal('Oops', result.error, 'error')
                                            } else {
                                                location.reload();
                                            }
                                        },
                                        error: (err) => {
                                            swal('Oops', err.status == 403 ? 'Bạn không có quyền sử dụng chức năng này' : 'Lỗi không xác định hoặc bạn không có quyền thực hiện chức năng này.', 'error')
                                        }
                                    });
                                }
                            });

                            //delete brand
                            $("#table-review tbody").delegate('.delete-review', 'click', (e) => {

                                confirmDelete((result) => {
                                    if (result == true) {
                                        var id = $(e.currentTarget).attr('data-id-review'); 
                                        var row = $('#table-review tbody').find(`[id = ${id}]`);

                                        $.ajax({
                                            url: '/admin/review',
                                            method: 'DELETE',
                                            data: {
                                                id: id
                                            },
                                            success: (result) => {
                                                var error = result.error;
                                                if (error) {
                                                    swal('Oops', error, 'error')
                                                } else {
                                                    table.row(row).remove().draw('page');
                                                }
                                            },
                                            error: (err) => {
                                                swal('Oops', err.status == 403 ? 'Bạn không có quyền sử dụng chức năng này' : 'Lỗi không xác định hoặc bạn không có quyền thực hiện chức năng này.', 'error')
                                            }
                                        });
                                    } 
                                });
                            });

                            $("#table-review tbody").delegate('.allow-review', 'click', (e) => {
                                var id = $(e.currentTarget).attr('data-id-review'); 
                                var row = $('#table-review tbody').find(`[id = ${id}]`);

                                $.ajax({
                                    url: '/admin/review',
                                    method: 'PUT',
                                    data: {
                                        id: id,
                                        parameters: {
                                            status: 1
                                        }
                                    },
                                    success: (result) => {
                                        var error = result.error;
                                        if (error) {
                                            swal('Oops', error, 'error')
                                        } else {
                                            swal('Thành công', 'Nhận xét đã được chấp nhận', 'info')
                                            table.row(row).remove().draw('page');
                                        }
                                    },
                                    error: (err) => {
                                        swal('Oops', err.status == 403 ? 'Bạn không có quyền sử dụng chức năng này' : 'Lỗi không xác định hoặc bạn không có quyền thực hiện chức năng này.', 'error')
                                    }
                                });
                            });

                            $("#table-review tbody").delegate('.dismiss-review', 'click', (e) => {
                                var id = $(e.currentTarget).attr('data-id-review'); 
                                var row = $('#table-review tbody').find(`[id = ${id}]`);

                                $.ajax({
                                    url: '/admin/review',
                                    method: 'PUT',
                                    data: {
                                        id: id,
                                        parameters: {
                                            status: 2
                                        }
                                    },
                                    success: (result) => {
                                        var error = result.error;
                                        if (error) {
                                            swal('Oops', error, 'error')
                                        } else {
                                            swal('Thành công', 'Nhận xét đã bị từ chối', 'info')
                                            table.row(row).remove().draw('page');
                                        }
                                    },
                                    error: (err) => {
                                        swal('Oops', err.status == 403 ? 'Bạn không có quyền sử dụng chức năng này' : 'Lỗi không xác định hoặc bạn không có quyền thực hiện chức năng này.', 'error')
                                    }
                                });
                            });
                        });
                    </script>
</body>

</html>