                                                                    <% if (subCategory && subCategory.length != 0){ %> 
                                                                        <% subCategory.forEach((sub) => { %>
                                                                            <% var items = sub.items %>
                                                                            <% if (items && items.length != 0){ %>
                                                                                <% items.forEach((item) => { %>
                                                                                    <option value="<%- item.name %>" data-root-name="<%- category.name %>" data-root-id="<%- category._id %>" data-alias="<%- category.alias %>">----<%- item.name %></option>
