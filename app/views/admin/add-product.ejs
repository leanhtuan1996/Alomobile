                                                                <% categories.forEach((category) => { %>
                                                                    <option value="<%- category.name %>" data-root-name="<%- category.name %>" data-root-id="<%- category._id %>" data-is-root="1" data-alias="<%- category.alias %>"><%- category.name %></option>

