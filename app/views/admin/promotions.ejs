                                                        url: '/admin/user',
                                                        method: 'PUT',
                                                        data: {
                                                            id: $(row).attr('id'),
                                                            properties: JSON.stringify(properties)
                                                        },
                                                        success: (data) => {
                                                            if (data.error) {
                                                                showNotifier('error', data.error);
                                                                return
                                                            } 
                                                            $(row).find('td.td-status').find('span').html('DEACTIVE').removeClass('label-success').addClass('label-default');                                                    
